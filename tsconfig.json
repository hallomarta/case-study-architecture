{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "strictPropertyInitialization": false,
        "preserveConstEnums": true,
        "allowJs": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ]
    },
    "include": [
        "src/**/*",
        "src/@types/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "files": true
    }
}